<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/button_gap</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="MainActivityScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/main_theme_color</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="SettingActivityText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingActivityLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/block_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="SettingsActivityScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>



    <style name="HeadWithArrowBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>


    <style name="ClearIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:visibility">gone</item>
        <item name="android:backgroundTint">@color/background_grey</item>
        <item name="android:drawableLeft">@drawable/clear</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawableTint">@color/icon_grey</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:backgroundTint">@color/background_grey</item>
        <item name="android:drawableLeft">@drawable/search1</item>
        <item name="android:drawablePadding">@dimen/search_padding</item>
        <item name="android:drawableTint">@color/icon_grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/hint_search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/icon_grey</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawableTint">@color/icon_grey</item>
    </style>

