<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MainActivityButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/button_radius</item>
        <item name="android:textSize">@dimen/main_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconPadding">@dimen/button_gap</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="MainActivityScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/main_theme_color</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="SettingActivityText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SettingActivityLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/block_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/padding</item>
    </style>

    <style name="SettingsActivityScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>



    <style name="HeadWithArrowBack">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:layout_marginLeft">@dimen/margin</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/main_text_size</item>
    </style>


    <style name="ClearIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:visibility">gone</item>
        <item name="android:backgroundTint">@color/background_grey</item>
        <item name="android:drawableLeft">@drawable/clear</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawableTint">@color/icon_grey</item>
    </style>

    <style name="Search">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/rounded_edittext</item>
        <item name="android:backgroundTint">@color/background_grey</item>
        <item name="android:drawableLeft">@drawable/search1</item>
        <item name="android:drawablePadding">@dimen/search_padding</item>
        <item name="android:drawableTint">@color/icon_grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:hint">@string/hint_search</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLength">20</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">13dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/icon_grey</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="SettingsIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:paddingLeft">14dp</item>
        <item name="android:drawableTint">@color/icon_grey</item>
    </style>

<!--    <style name="ArrowBack">-->
<!--        <item name="android:layout_width">wrap_content</item>-->
<!--        <item name="android:layout_height">wrap_content</item>-->
<!--        <item name="android:src">@drawable/arrow_back</item>-->
<!--        <item name="tint">@color/black</item>-->
<!--    </style>-->

    <style name="ArrowBack">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">start|center</item>
        <item name="android:drawableLeft">@drawable/arrow_back</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">12dp</item>
        <item name="android:drawableTint">@color/black</item>
    </style>


    <style name="TrackCover">
        <item name="android:layout_width">@dimen/track_cover_size</item>
        <item name="android:layout_height">@dimen/track_cover_size</item>
        <item name="android:layout_weight">0.125</item>

    </style>

    <style name="TrackName">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">19dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <style name="PerformerName">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/icon_grey</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/performer_size</item>
    </style>

    <style name="Dot">
        <item name="android:layout_width">@dimen/track_dot_size</item>
        <item name="android:layout_height">@dimen/track_dot_size</item>
        <item name="tint">@color/icon_grey</item>
    </style>

    <style name="ArrowForward">
        <item name="android:layout_width">@dimen/arrow_forward</item>
        <item name="android:layout_height">@dimen/arrow_forward</item>
        <item name="android:layout_weight">0.067</item>
        <item name="tint">@color/icon_grey</item>
        <item name="android:layout_gravity">end|center</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_left</item>
    </style>

    <style name="RefreshButton">
        <item name="android:layout_width">91dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/refresh</item>
        <item name="android:layout_marginTop">350dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="PlaceholderText">
        <item name="android:layout_width">312dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">238dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SettingActivitySwitch">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">start|center</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_weight">1</item>
        <item name="thumbTint">@color/icon_grey</item>
        <item name="trackTint">@color/background_grey</item>
    </style>


    <style name="HistoryText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:text">@string/you_searched</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/another_black</item>
    </style>

    <style name="CleanHistoryButton">
        <item name="android:layout_width">148dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="android:text">@string/clean_history</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:textSize">14sp</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:backgroundTint">@color/another_black</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ArrowBackForPlayer">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:drawableTint">@color/black</item>
        <item name="srcCompat">@drawable/arrow_back</item>
        <item name="tint">@color/another_black</item>
    </style>

    <style name="PlayerActivityScreen">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="TextPlaylist">
        <item name="android:textColor">@color/another_black</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="PlayButton">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    android:backgroundTint="@color/white"







</resources>